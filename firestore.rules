rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper to check if user is signed in (anon or real)
    function isSignedIn() {
      return request.auth != null;
    }

    match /traps/{trapId} {
      // Anyone can read a trap (if they have the ID)
      allow read: if true;
      
      // Only signed-in users can create traps
      allow create: if isSignedIn();
      
      // Allow Creators to update their own traps
      // OR Allow Anonymous users to update 'stats' (increment counters like views/attempts)
      allow update: if (isSignedIn() && resource.data.creatorId == request.auth.uid) || 
                   // Allow anyone to update stats (for views) AND responseNote
                   (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['stats', 'responseNote']));

      // Sessions Subcollection (Tracking)
      match /sessions/{sessionId} {
        // Allow anyone (anonymous tracking) to create/update sessions
        allow create, update: if true;
        
        // Allow ONLY the creator to read analytics
        allow read: if isSignedIn() && get(/databases/$(database)/documents/traps/$(trapId)).data.creatorId == request.auth.uid;
        
        match /events/{eventId} {
            allow create: if true;
            allow read: if isSignedIn() && get(/databases/$(database)/documents/traps/$(trapId)).data.creatorId == request.auth.uid;
        }
      }
    }
  }
}
